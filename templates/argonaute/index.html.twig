{% extends 'base.html.twig' %}

{% block title %}Hello ArgonauteController!
{% endblock %}

{% block body %}


	<div class="container">
		<h1 class="text-center mt-5" id="titre">Hello
			{% set id = -1 %}
			{% if argonautes %}
				{% for a in argonautes %}
					{% set id = id + 1 %}
				{% endfor %}
				{{argonautes[id].name}}
			{% endif %}
		</h1>

		{{ form_start(addArgonauteForm) }}
		<div class="row justify-content-center mb-5 mt-5">
			<div class="col-6">
				<div class="form-group">
					{{ form_row(addArgonauteForm.name) }}
				</div>
				<div class="form-group text-center">
					{{ form_row(addArgonauteForm.submit) }}
				</div>
			</div>
		</div>
		{{ form_end(addArgonauteForm) }}

		<div class="row">
			{% for argos in argonautes %}
				<div class="col-4 mb-3">
					<div class="card bg-secondary mb-3" style="max-width: 20rem;">
						<div class="card-header text-center">Nom de l'argonaute</div>
						<div class="card-body">
							<div class="col text-center">
								<img src="https://picsum.photos/200" style="width: 80px; Height: 80px;" class="rounded-circle p-0 mb-3" alt="avatar"/>
							</div>
							<h4 class="card-title text-center">{{ argos.name }}</h4>
							<p class="card-text text-center">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
							<div class="col text-center">
								<a class="btn btn-danger btn-sm m-2" href="{{path('delete_argonaute', {'id': argos.id})}}">
									<i class="fas fa-trash"></i>
								</a>
								<a class="btn btn-danger btn-sm m-2" href="{{path('modify_argonaute', {'id': argos.id})}}">
									<i class="fas fa-pen"></i>
								</a>
							</div>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>

	{% endblock %}
